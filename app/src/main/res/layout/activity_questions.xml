<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_are_you_hungry_for_now"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbBreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/breakfast"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbBrunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brunch"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbLunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lunch"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbMunchies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/munchies"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dinner"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/cbDrinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drinks"
            android:layout_weight="1"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_are_you_craving"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbAmerican"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/american"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbFrench"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/french"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbMexican"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
