                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbJapanese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/japanese"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbThai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thai"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbVietnam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vietnam"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbPizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pizza"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbDesserts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desserts"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbChinese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chinese"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbItalian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/italian"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cbVegetarian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vegetarian"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/cbMedeteranian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medeteranian"
                android:layout_weight="1"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_much_dough_do_you_have"/>

        <RatingBar
            android:id="@+id/rbPriceEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1"/>



        </LinearLayout>
